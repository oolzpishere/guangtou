<!DOCTYPE html>
<html>
<head>
  <title>Party</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= javascript_pack_tag 'frontend/application' %>
  <%= stylesheet_pack_tag 'frontend/application' %>

</head>
<body>
  <div id='<%= "#{@page_class}-page" %>' class="my-container container-fluid g-0">
    <div class="main">

      <%= render 'party_header' %>

      <%= yield %>

      <% if request.path.match('navigator/xcl') %>
        <%= render 'xcl_party_bottom'%>
      <% elsif request.path.match('navigator/nnl') %>
        <%= render 'nnl_party_bottom'%>
      <% elsif request.path != parties_path %>
        <% bottom_bg_path = (asset_pack_path 'media/images/party/bottom-bg.png') %>
        <%= render 'party_bottom', bottom_bg_path: bottom_bg_path %>
      <% end %>



    </div>

  </div>

</body>
</html>
