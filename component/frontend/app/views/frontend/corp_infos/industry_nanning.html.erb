<main class="window-holder position-relative" style=" "  >

  <!-- bg video container -->
  <div class="position-absolute " style="z-index: 0;">
    <div class="position-relative " style="width: 1920px; height: 1080px;  overflow: hidden;">
      <!-- mask -->
      <div class="position-absolute w-100 h-100" style="z-index: 1; background: rgba(0,0,0, 0.3); ">
      </div>
      <video id="industry-hezhou-video"
               class="video-js vjs-default-skin industry-bg-video"
               width=1920
               style=""
               loop >
        <source src="/videos/industry/guomao.mp4" type="video/mp4">
      </video>
    </div>
  </div>

  <div class="w-100" style="height: 22%;" ></div>

  <!-- align-items-center justify-content-center -->
  <div class="row g-0 justify-content-center m-auto position-relative" style="width:95%; ">
    <!-- left -->
    <div class="col ">
      <div class="w-100" style="height: 30px;" ></div>

      <%= image_pack_tag "media/images/corp/industry/nanning/main-title.png", class: '', style: '' %>
    </div>

    <!-- right -->
    <div class="col">
      <div class="w-100" style="height: 200px;" ></div>

      <div class="row g-0 w-100 d-flex justify-content-end">
        <div class="col-auto position-relative text-end" style="">
          <%= image_pack_tag "media/images/corp/industry/nanning/subtitle1.png", class: '', style: '' %>
          <%= image_pack_tag "media/images/corp/industry/nanning/subtitle2.png", class: 'mt-3', style: '' %>
          <%= image_pack_tag "media/images/corp/industry/nanning/text.png", class: 'mt-4', style: '' %>
        </div>

      </div>


    </div>

  </div>


  <%= render 'profile_bottom' %>

</main>
