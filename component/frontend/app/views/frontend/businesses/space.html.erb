<div class=" position-relative window-holder" style="" >
  <div class="business-detail-bg-img w-100 h-100 position-absolute">
    <%= image_pack_tag 'media/images/businesses/space/detail-bg1.png', class: '', style: '' %>
    <%= image_pack_tag 'media/images/businesses/space/detail-bg2.png', class: '', style: '' %>
  </div>

  <div class=" row g-0 position-relative">

    <!-- Slider main container -->
    <div class="swiper-container businesses-main-swiper position-relative" style=" background-color: rgba(0,0,0,0.6); ">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper">
        <!-- Slides -->
        <div class="swiper-slide ">
          <div class="w-100" style="height: 300px;"></div>
          <!-- text intro -->
          <div class="position-absolute" style="top:300px; right: 120px;">
            <%= image_pack_tag 'media/images/businesses/space/text.png', class: '', style: '' %>
          </div>

          <!-- product container -->
          <div class=" mx-auto position-relative"  style="width: 1779px; height: 697px; background: no-repeat left top url(<%= asset_pack_path 'media/images/businesses/space/plane.png'%>) " >
            <!-- point 1 -->
            <% points = [
              { container_style: "top:140px; left:530px;", arrow_container_style: "top: 140px; left: 50px;" },
              { container_style: "top:150px; left:910px;", arrow_container_style: "top: 155px; left: -50px;" },
              { container_style: "top:265px; left:1030px;", arrow_container_style: "top: 80px; left: -50px;" },
              { container_style: "top:410px; left:650px; ", arrow_container_style: "top: -60px; left: 165px;" },
              { container_style: "top:470px; left:1110px; ", arrow_container_style: "top: -60px; left: -50px;" },
            ] %>
            <% points.each_with_index do |point, i| %>
              <% humanId = i += 1 %>
              <div class="component-point-container position-absolute" data-type='plane' data-id=<%= humanId %> style='<%= point[:container_style] %>' >
                <div class="position-relative">
                  <%= image_pack_tag "media/images/businesses/space/titles/plane-title#{humanId}.png", class: 'title-img ', style: 'left: 0; top:0;' %>
                  <%= image_pack_tag "media/images/businesses/space/titles/#{humanId}-active.png", class: 'title-img-active ', 'data-id': humanId, style: 'left: 0; top:0;' %>

                  <%= link_to( "#{businesses_space_details_path}?slide=0&id=#{humanId}" ) do %>
                    <div class="arrow-container animate__animated animate__fadeInDown" style='<%= point[:arrow_container_style] %>' >
                      <div class="position-relative">
                        <div class="arrow-2">
                        </div>
                        <div class="arrow-1 animate__animated animate__infinite zoomIn"></div>
                      </div>
                    </div>
                  <% end %>

                </div>
              </div>
            <% end %>
          </div>

        </div>
        <!-- slide 2 aerospace-slide -->
        <div class="swiper-slide position-relative">
          <div class="w-100" style="height: 300px;"></div>
          <!-- text intro -->
          <div class="position-absolute" style="top:300px; right: 120px;">
            <%= image_pack_tag 'media/images/businesses/space/text.png', class: '', style: '' %>
          </div>
          <!-- product container -->
          <div class=" mx-auto position-relative"  style="width: 959px; height: 846px; background: no-repeat left top url(<%= asset_pack_path 'media/images/businesses/aerospace/aerospace-rotated.png'%>) " >
            <!-- point 1 -->
            <% points = [
            { container_style: "top:200px; left:-240px; z-index: 1;", arrow_container_style: "top: -50px; left: 250px;" },
            { container_style: "top:200px; left:-100px;", arrow_container_style: "top: -55px; left: 250px;" },
            { container_style: "top:580px; left:230px;", arrow_container_style: "top: -40px; left: 350px;" },
            { container_style: "top:180px; left:350px; ", arrow_container_style: "top: 120px; left: -10px;" },
            ] %>
            <% points.each_with_index do |point, i| %>
              <% humanId = i += 1 %>
              <div class="component-point-container position-absolute" data-type='aerospace' data-id=<%= humanId %> style='<%= point[:container_style] %>' >
                <div class="position-relative">
                  <%= image_pack_tag "media/images/businesses/aerospace/titles/#{humanId}.png", class: 'title-img ', style: 'left: 0; top:0;' %>
                  <%= image_pack_tag "media/images/businesses/aerospace/titles/#{humanId}-active.png", class: 'title-img-active ', 'data-id': humanId, style: 'left: 0; top:0;' %>

                  <%= link_to( "#{businesses_space_details_path}?slide=1&id=#{humanId}" ) do %>
                    <div class="arrow-container animate__animated animate__fadeInDown" style='<%= point[:arrow_container_style] %>' >
                      <div class="position-relative">
                        <div class="arrow-2">
                        </div>
                        <div class="arrow-1 animate__animated animate__infinite zoomIn"></div>
                      </div>
                    </div>
                  <% end %>

                </div>
              </div>
            <% end %>
          </div>

        </div>


      </div>
      <!-- If we need pagination -->
      <div class="swiper-pagination  business-swiper-pagination">
        <div class="my-swiper-pagination-bullet"></div>
      </div>

      <!-- position absolute, bottom center, a little bit right. -->
      <div class="title-pagination position-absolute" style="z-index: 1020; left: 1250px; bottom: 70px;">
        <!-- title 0, data-id="0", on click main swiper move to data-id -->
        <!-- title 1 -->
        <div class="row g-0">
          <div class="col business-swiper-tag position-relative" data-id="1" >
            <%= image_pack_tag 'media/images/businesses/space/plane-tag.png' %>
            <%= image_pack_tag 'media/images/businesses/space/plane-tag-active.png', class: 'active-img position-absolute d-none', style: "top:0; left:0;" %>
          </div>
          <div class="col business-swiper-tag ms-5 position-relative" data-id="2" >
            <%= image_pack_tag 'media/images/businesses/space/aerospace-tag.png' %>
            <%= image_pack_tag 'media/images/businesses/space/aerospace-tag-active.png', class: 'active-img position-absolute d-none', style: "top:0; left:0;" %>
          </div>
        </div>
      </div>

    </div>

    <div class="position-relative"  style="width:47%;">
      <%# render 'navs', return_path: parties_path %>

    </div>

  </div>






</div>




