<% slide_type = ['family', 'oil-truck', 'bus', 'truck'] %>
<div class="window-holder position-relative " style="" >
  <div class="business-detail-bg-img w-100 h-100 position-absolute">
    <%= image_pack_tag 'media/images/businesses/car/main-bg-family.png', class: '', style: '' %>
    <%= image_pack_tag 'media/images/businesses/car/main-bg-oil-truck.png', class: '', style: '' %>
    <%= image_pack_tag 'media/images/businesses/car/main-bg-bus.png', class: '', style: '' %>
    <%= image_pack_tag 'media/images/businesses/car/main-bg-truck.png', class: '', style: '' %>
  </div>

  <div class=" row g-0 position-relative" >
    <!-- left -->
    <!-- animate__animated animate__fadeInLeft -->
    <div class="position-relative  mfadeInLeft"  style="width:47%; z-index: 2;">
      <div class="w-100" style="height: 300px;"></div>

      <div class="business-components-container">
        <!-- family-components -->
        <div class="family-components business-components position-relative" style="width: 1200px; height: 587px; ">
          <% family_num_range = (1..9) %>
          <div class="position-absolute" style="left: 90px;" >
            <% family_num_range.each do |i| %>
              <%= image_pack_tag "media/images/businesses/car/family/details/#{i}.png", class: 'component-info ', style: '' %>
            <% end %>
          </div>

          <div class="component-btns position-absolute" style="top: 510px;left: 140px;">
            <div class="row g-0 position-relative">
              <% family_num_range.each do |i| %>
                <div class="component-btn col position-relative active mx-1" data-type=<%= slide_type[0] %> data-id=<%= i %> >
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}.png", class: 'component-btn-img', style: '' %>
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}-active.png", class: 'component-btn-img-active', style: '' %>
                </div>
              <% end %>
            </div>

          </div>
        </div>
        <!-- oil-truck-components -->
        <div class="oil-truck-components business-components position-relative" style="width: 1200px; height: 587px; ">
          <% oil_truck_num_range = (1..5) %>
          <div class="position-absolute" style="left: 90px;" >
            <% oil_truck_num_range.each do |i| %>
              <%= image_pack_tag "media/images/businesses/car/oil_truck/details/#{i}.png", class: 'component-info', style: '' %>
            <% end %>
          </div>

          <div class="component-btns position-absolute"  style="top: 510px;left: 140px;">
            <div class="row g-0">
              <% oil_truck_num_range.each do |i| %>
                <div class="component-btn col position-relative active mx-1" data-type=<%= slide_type[1] %> data-id=<%= i %> >
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}.png", class: 'component-btn-img', style: '' %>
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}-active.png", class: 'component-btn-img-active', style: '' %>
                </div>
              <% end %>
            </div>

          </div>
        </div>

        <!-- bus-components -->
        <div class="bus-components business-components position-relative" style="width: 1200px; height: 587px; ">
          <% bus_num_range = (1..5) %>
          <div class="position-absolute" style="left: 90px;" >
            <% bus_num_range.each do |i| %>
              <%= image_pack_tag "media/images/businesses/car/bus/details/#{i}.png", class: 'component-info', style: '' %>
            <% end %>
          </div>

          <div class="component-btns position-absolute"  style="top: 510px;left: 140px;">
            <div class="row g-0">
              <% bus_num_range.each do |i| %>
                <div class="component-btn col position-relative active mx-1" data-type=<%= slide_type[2] %> data-id=<%= i %> >
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}.png", class: 'component-btn-img', style: '' %>
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}-active.png", class: 'component-btn-img-active', style: '' %>
                </div>
              <% end %>
            </div>

          </div>
        </div>

        <!-- truck-components -->
        <div class="truck-components business-components position-relative" style="width: 1200px; height: 587px; ">
          <% truck_num_range = (1..4) %>
          <div class="position-absolute" style="left: 90px;" >
            <% truck_num_range.each do |i| %>
              <%= image_pack_tag "media/images/businesses/car/truck/details/#{i}.png", class: 'component-info', style: '' %>
            <% end %>
          </div>

          <div class="component-btns position-absolute"  style="top: 510px;left: 140px;">
            <div class="row g-0">
              <% truck_num_range.each do |i| %>
                <div class="component-btn col position-relative active mx-1" data-type=<%= slide_type[3] %> data-id=<%= i %> >
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}.png", class: 'component-btn-img', style: '' %>
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}-active.png", class: 'component-btn-img-active', style: '' %>
                </div>
              <% end %>
            </div>

          </div>
        </div>

      </div>

    </div>
    <!-- right -->
    <!-- Slider main container -->
    <!-- animate__animated animate__fadeInRight -->
    <div class="swiper-container businesses-details-swiper car-details-swiper " style="width:53%; background-color: rgba(0,0,0,0.6);">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper mfadeInRight" style=" " >
        <!-- Slide1 family-slide -->
        <!-- product_list -->
        <%= tag.div class: "swiper-slide #{slide_type[0]}-slide", data: {type: slide_type[0]} do %>
          <div class="w-100" style="height: 340px;"></div>
          <!-- product container -->
          <div class="position-relative mx-auto" style="width: 1170px; height: 576px; background: no-repeat left top url(<%= asset_pack_path 'media/images/businesses/car/family/family-croped90.png'%>) " >
            <!-- point 1 -->
            <% points = [
              { container_style: "top:90px; left:0px;", arrow_container_style: "top: 170px; left: 270px;" },
              { container_style: "top:-40px; left:250px;", arrow_container_style: "top: 220px; left: 190px;" },
              { container_style: "top:-50px; left:560px;", arrow_container_style: "top: 120px; left: 60px;" },
              { container_style: "top:-30px; left:930px; ", arrow_container_style: "top: 220px; left: 50px;" },
              { container_style: "top:330px; left:0px; ", arrow_container_style: "top: -40px; left: 200px;" },
              # 6
              { container_style: "top:480px; left:340px; ", arrow_container_style: "top: -10px; left: -50px;" },
              { container_style: "top:290px; left:920px; z-index:2;", arrow_container_style: "top: 80px; left: -30px;" },
              { container_style: "top:340px; left:700px; z-index:1; ", arrow_container_style: "top: -40px; left: -30px;" },
              { container_style: "top:360px; left:600px; ", arrow_container_style: "top: -30px; left: -20px;" },
            ] %>
            <% points.each_with_index do |point, i| %>
              <% humanId = i += 1 %>
              <div class="component-point-container position-absolute" data-type=<%= slide_type[0] %> data-id=<%= humanId %> style='<%= point[:container_style] %>' >
                <div class="position-relative">
                  <%= image_pack_tag "media/images/businesses/car/family/titles/#{humanId}.png", class: 'title-img ', style: 'left: 0; top:0;' %>
                  <%= image_pack_tag "media/images/businesses/car/family/titles/#{humanId}-active.png", class: 'title-img-active ', 'data-id': humanId, style: 'left: 0; top:0;' %>

                  <div class="arrow-container animate__animated animate__fadeIn" style='<%= point[:arrow_container_style] %>' >
                    <div class="position-relative">
                      <div class="arrow-2">
                      </div>
                      <div class="arrow-1 animate__animated animate__infinite zoomIn"></div>
                    </div>
                  </div>

                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- Slide 2 oil-truck-slide -->
        <%= tag.div class: "swiper-slide #{slide_type[1]}-slide", data: {type: slide_type[1]} do %>
          <div class="w-100" style="height: 320px;"></div>
          <!-- product container -->
          <div class="position-relative mx-auto" style="width:1170px; height: 571px; background: no-repeat left top url(<%= asset_pack_path 'media/images/businesses/car/oil_truck/oil-truck-croped90.png'%>) " >
            <!-- point 1 -->
            <% points = [
              { container_style: "top:-10px; left:-30px;", arrow_container_style: "top: 330px; left: 270px;" },
              { container_style: "top:-20px; left:280px;", arrow_container_style: "top: 330px; left: 110px;" },
              { container_style: "top:340px; left:530px;", arrow_container_style: "top: -50px; left: 70px;" },
              { container_style: "top:-10px; left:900px;", arrow_container_style: "top: 250px; left: 80px;" },
              { container_style: "top:380px; left:920px;", arrow_container_style: "top: -50px; left: 80px;" },
            ] %>
            <% points.each_with_index do |point, i| %>
              <% humanId = i += 1 %>
              <div class="component-point-container position-absolute" data-type=<%= slide_type[1] %> data-id=<%= humanId %> style='<%= point[:container_style] %>' >
                <div class="position-relative">
                  <%= image_pack_tag "media/images/businesses/car/oil_truck/titles/#{humanId}.png", class: 'title-img ', style: 'left: 0; top:0;' %>
                  <%= image_pack_tag "media/images/businesses/car/oil_truck/titles/#{humanId}-active.png", class: 'title-img-active ', 'data-id': humanId, style: 'left: 0; top:0;' %>

                  <div class="arrow-container animate__animated animate__fadeIn" style='<%= point[:arrow_container_style] %>' >
                    <div class="position-relative">
                      <div class="arrow-2">
                      </div>
                      <div class="arrow-1 animate__animated animate__infinite zoomIn"></div>
                    </div>
                  </div>

                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- Slide3 bus-slide -->
        <!-- product_list -->
        <%= tag.div class: "swiper-slide #{slide_type[2]}-slide", data: {type: slide_type[2]} do %>
          <div class="w-100" style="height: 380px;"></div>
          <!-- product container -->
          <div class="position-relative mx-auto" style="width: 999px; height: 539px; background: no-repeat left top url(<%= asset_pack_path 'media/images/businesses/car/bus/bus-croped90.png'%>) " >
            <!-- point 1 -->
            <% points = [
              { container_style: "top:-10px; left:-50px;", arrow_container_style: "top: 320px; left: 350px;" },
              { container_style: "top:-100px; left:270px;", arrow_container_style: "top: 130px; left: 190px;" },
              { container_style: "top:-60px; left:630px;", arrow_container_style: "top: 290px; left: 0px;" },
              { container_style: "top:400px; left:650px;", arrow_container_style: "top: -50px; left: 20px;" },
              { container_style: "top:370px; left:780px;", arrow_container_style: "top: -30px; left: -50px;" },
            ] %>
            <% points.each_with_index do |point, i| %>
              <% humanId = i += 1 %>
              <div class="component-point-container position-absolute" data-type=<%= slide_type[2] %> data-id=<%= humanId %> style='<%= point[:container_style] %>' >
                <div class="position-relative">
                  <%= image_pack_tag "media/images/businesses/car/bus/titles/#{humanId}.png", class: 'title-img ', style: 'left: 0; top:0;' %>
                  <%= image_pack_tag "media/images/businesses/car/bus/titles/#{humanId}-active.png", class: 'title-img-active ', 'data-id': humanId, style: 'left: 0; top:0;' %>

                  <div class="arrow-container animate__animated animate__fadeIn" style='<%= point[:arrow_container_style] %>' >
                    <div class="position-relative">
                      <div class="arrow-2">
                      </div>
                      <div class="arrow-1 animate__animated animate__infinite zoomIn"></div>
                    </div>
                  </div>

                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- Slide4 truck-slide -->
        <!-- product_list -->
        <%= tag.div class: "swiper-slide #{slide_type[3]}-slide", data: {type: slide_type[3]} do %>
          <div class="w-100" style="height: 380px;"></div>
          <!-- product container -->
          <div class="position-relative mx-auto" style="width: 999px; height: 539px; background: no-repeat left top url(<%= asset_pack_path 'media/images/businesses/car/truck/truck-croped90.png'%>) " >
            <!-- point 1 -->
            <% points = [
              { container_style: "top:-40px; left:-50px;", arrow_container_style: "top: 420px; left: 95px;" },
              { container_style: "top:-80px; left:310px;", arrow_container_style: "top: 100px; left: 200px;" },
              { container_style: "top:-60px; left:630px;", arrow_container_style: "top: 240px; left: 10px;" },
              { container_style: "top:400px; left:620px;", arrow_container_style: "top: -50px; left: -50px;" },
            ] %>
            <% points.each_with_index do |point, i| %>
              <% humanId = i += 1 %>
              <div class="component-point-container position-absolute" data-type=<%= slide_type[3] %> data-id=<%= humanId %> style='<%= point[:container_style] %>' >
                <div class="position-relative">
                  <%= image_pack_tag "media/images/businesses/car/truck/titles/#{humanId}.png", class: 'title-img ', style: 'left: 0; top:0;' %>
                  <%= image_pack_tag "media/images/businesses/car/truck/titles/#{humanId}-active.png", class: 'title-img-active ', 'data-id': humanId, style: 'left: 0; top:0;' %>

                  <div class="arrow-container animate__animated animate__fadeIn" style='<%= point[:arrow_container_style] %>' >
                    <div class="position-relative">
                      <div class="arrow-2">
                      </div>
                      <div class="arrow-1 animate__animated animate__infinite zoomIn"></div>
                    </div>
                  </div>

                </div>
              </div>
            <% end %>
          </div>
        <% end %>

      </div>
      <!-- If we need pagination -->
      <div class="swiper-pagination"></div>
      <!-- position absolute, bottom center, a little bit right. -->
      <div class="title-pagination position-absolute" style="z-index: 1020; left: 50px; bottom: 50px;">
        <!-- title 0, data-id="0", on click main swiper move to data-id -->
        <div class="row g-0">
          <div class="col business-swiper-tag position-relative" data-id="1" >
            <%= image_pack_tag 'media/images/businesses/car/1-tag.png' %>
            <%= image_pack_tag 'media/images/businesses/car/1-tag-active.png', class: 'active-img position-absolute d-none', style: "top:0; left:0;" %>
          </div>
          <div class="col business-swiper-tag ms-5 position-relative" data-id="2" >
            <%= image_pack_tag 'media/images/businesses/car/2-tag.png' %>
            <%= image_pack_tag 'media/images/businesses/car/2-tag-active.png', class: 'active-img position-absolute d-none', style: "top:0; left:0;" %>
          </div>
        </div>

        <div class="row g-0 mt-5">
          <div class="col business-swiper-tag position-relative" data-id="3" >
            <%= image_pack_tag 'media/images/businesses/car/3-tag.png' %>
            <%= image_pack_tag 'media/images/businesses/car/3-tag-active.png', class: 'active-img position-absolute d-none', style: "top:0; left:0;" %>
          </div>
          <div class="col business-swiper-tag ms-5 position-relative" data-id="4" >
            <%= image_pack_tag 'media/images/businesses/car/4-tag.png' %>
            <%= image_pack_tag 'media/images/businesses/car/4-tag-active.png', class: 'active-img position-absolute d-none', style: "top:0; left:0;" %>
          </div>
        </div>

      </div>


    </div>

  </div>






</div>
