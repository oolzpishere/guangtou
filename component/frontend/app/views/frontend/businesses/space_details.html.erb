<% slide_type = ['plane', 'aerospace'] %>
<div class="window-holder position-relative " style="" >
  <div class="business-detail-bg-img w-100 h-100 position-absolute">
    <%= image_pack_tag 'media/images/businesses/space/detail-bg1.png', class: '', style: '' %>
    <%= image_pack_tag 'media/images/businesses/space/detail-bg2.png', class: '', style: '' %>
  </div>

  <div class=" row g-0 position-relative" >
    <!-- left -->
    <div class="position-relative mfadeInLeft"  style="width:47%; z-index: 2;">
      <div class="w-100" style="height: 225px;"></div>

      <div class="business-components-container">
        <!-- plane-components -->
        <div class="plane-components business-components position-relative" style="width: 900px; height: 440px; ">
          <div class="position-absolute" style="left: 67.5px;" >
            <% (1..5).each do |i| %>
              <%= image_pack_tag "media/images/businesses/space/details/plane#{i}.png", class: 'component-info ', style: '' %>
            <% end %>
          </div>

          <div class="component-btns position-absolute" style="top: 382.5px;left: 105px;">
            <div class="row g-0 position-relative">
              <% (1..5).each do |i| %>
                <div class="component-btn col position-relative active mx-1" data-type="plane" data-id=<%= i %> >
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}.png", class: 'component-btn-img', style: '' %>
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}-active.png", class: 'component-btn-img-active', style: '' %>
                </div>
              <% end %>
            </div>

          </div>
        </div>
        <!-- aerospace-components -->
        <div class="aerospace-components business-components position-relative" style="width: 900px; height: 440px; ">
          <div class="position-absolute" style="left: 90px;" >
            <% (1..4).each do |i| %>
              <%= image_pack_tag "media/images/businesses/aerospace/details/aerospace#{i}.png", class: 'component-info', style: '' %>
            <% end %>
          </div>

          <div class="component-btns position-absolute"  style="top: 382.5px;left: 105px;">
            <div class="row g-0">
              <% (1..4).each do |i| %>
                <div class="component-btn col position-relative active mx-1" data-type="aerospace" data-id=<%= i %> >
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}.png", class: 'component-btn-img', style: '' %>
                  <%= image_pack_tag "media/images/businesses/component_btns/#{i}-active.png", class: 'component-btn-img-active', style: '' %>
                </div>
              <% end %>
            </div>

          </div>
        </div>

      </div>

    </div>
    <!-- right -->
    <!-- Slider main container -->
    <div class="swiper-container businesses-details-swiper space-details-swiper " style="width:53%; background-color: rgba(0,0,0,0.6);">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper mfadeInRight" style=" " >
        <!-- Slide1 plane-slide -->
        <!-- product_list -->
        <%= tag.div class: "swiper-slide #{slide_type[0]}-slide", data: {type: slide_type[0]} do %>
          <div class="w-100" style="height: 300px;"></div>
          <!-- product container -->
          <div class="position-relative mx-auto" style="width: 795px; height: 311px; background: no-repeat left top url(<%= asset_pack_path 'media/images/businesses/space/plane60.png'%>) " >
            <!-- point 1 -->
            <% points = [
              { container_style: "top:7px; left:210px;", arrow_container_style: "top: 105px; left: 37px;" },
              { container_style: "top:11px; left:420px;", arrow_container_style: "top: 116px; left: -37px;" },
              { container_style: "top:82px; left:472px;", arrow_container_style: "top: 60px; left: -37px;" },
              { container_style: "top:187px; left:217px; ", arrow_container_style: "top: -45px; left: 123px;" },
              { container_style: "top:217px; left:517px; ", arrow_container_style: "top: -45px; left: -37px;" },
            ] %>
            <% points.each_with_index do |point, i| %>
              <% humanId = i += 1 %>
              <div class="component-point-container position-absolute" data-type=<%= slide_type[0] %> data-id=<%= humanId %> style='<%= point[:container_style] %>' >
                <div class="position-relative">
                  <%= image_pack_tag "media/images/businesses/space/titles/plane-title#{humanId}.png", class: 'title-img ', style: 'left: 0; top:0;' %>
                  <%= image_pack_tag "media/images/businesses/space/titles/#{humanId}-active.png", class: 'title-img-active ', 'data-id': humanId, style: 'left: 0; top:0;' %>

                  <div class="arrow-container animate__animated animate__fadeIn" style='<%= point[:arrow_container_style] %>' >
                    <div class="position-relative">
                      <div class="arrow-2">
                      </div>
                      <div class="arrow-1 animate__animated animate__infinite zoomIn"></div>
                    </div>
                  </div>

                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- Slide 2 aerospace-slide -->
        <%= tag.div class: "swiper-slide #{slide_type[1]}-slide", data: {type: slide_type[1]} do %>
          <div class="w-100" style="height: 270px;"></div>
          <!-- product container -->
          <div class="position-relative mx-auto" style="width:576px; height: 509px; background: no-repeat left top url(<%= asset_pack_path 'media/images/businesses/aerospace/aerospace80.png'%>) " >
            <!-- point 1 -->
            <% points = [
              { container_style: "top:67px; left:-135px; z-index: 1;", arrow_container_style: "top: -37px; left: 187px;" },
              { container_style: "top:90px; left:-60px;", arrow_container_style: "top: -41px; left: 187px;" },
              { container_style: "top:375px; left:75px;", arrow_container_style: "top: -30px; left: 262px;" },
              { container_style: "top:82px; left:232px; ", arrow_container_style: "top: 90px; left: -7px;" },
            ] %>
            <% points.each_with_index do |point, i| %>
              <% humanId = i += 1 %>
              <div class="component-point-container position-absolute" data-type=<%= slide_type[1] %> data-id=<%= humanId %> style='<%= point[:container_style] %>' >
                <div class="position-relative">
                  <%= image_pack_tag "media/images/businesses/aerospace/titles/#{humanId}.png", class: 'title-img ', style: 'left: 0; top:0;' %>
                  <%= image_pack_tag "media/images/businesses/aerospace/titles/#{humanId}-active.png", class: 'title-img-active ', 'data-id': humanId, style: 'left: 0; top:0;' %>

                  <div class="arrow-container animate__animated animate__fadeIn" style='<%= point[:arrow_container_style] %>' >
                    <div class="position-relative">
                      <div class="arrow-2">
                      </div>
                      <div class="arrow-1 animate__animated animate__infinite zoomIn"></div>
                    </div>
                  </div>

                </div>
              </div>
            <% end %>
          </div>
        <% end %>

      </div>
      <!-- If we need pagination -->
      <div class="swiper-pagination business-swiper-pagination">
        <div class="my-swiper-pagination-bullet">
        </div>
      </div>
      <!-- position absolute, bottom center, a little bit right. -->
      <div class="title-pagination position-absolute" style="z-index: 1020; left: 50px; bottom: 50px;">
        <!-- title 0, data-id="0", on click main swiper move to data-id -->
        <div class="row g-0">
          <div class="col business-swiper-tag position-relative" data-id="1" >
            <%= image_pack_tag 'media/images/businesses/space/plane-tag.png' %>
            <%= image_pack_tag 'media/images/businesses/space/plane-tag-active.png', class: 'active-img position-absolute d-none', style: "top:0; left:0;" %>
          </div>
          <div class="col business-swiper-tag ms-5 position-relative" data-id="2" >
            <%= image_pack_tag 'media/images/businesses/space/aerospace-tag.png' %>
            <%= image_pack_tag 'media/images/businesses/space/aerospace-tag-active.png', class: 'active-img position-absolute d-none', style: "top:0; left:0;" %>
          </div>
        </div>

      </div>


    </div>

  </div>






</div>
