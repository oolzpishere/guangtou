<div class="window-holder position-relative " style="background: url(<%= asset_pack_path 'media/images/businesses/space/detail-bg.png'%>) ">

  <div class=" row g-0 position-relative" >
    <!-- left -->
    <div class="position-relative animate__animated animate__fadeInLeft"  style="width:47%;">
      <div class="w-100" style="height: 300px;"></div>
      <!-- # TODO: add position-absolute, move to right a bit -->
      <div class="business-components-container">
        <div class="plane-components business-components position-relative active">
          <%= image_pack_tag 'media/images/businesses/space/details/plane1.png', class: 'component-info active', style: '' %>
          <%= image_pack_tag 'media/images/businesses/space/details/plane2.png', class: 'component-info', style: '' %>

          <div class="component-btns position-absolute" style="bottom: 50px;left: 50px;">
            <div class="row g-0 position-relative">
              <div class="component-btn col position-relative active mx-1" data-type="plane" data-id="1">
                <%= image_pack_tag 'media/images/businesses/space/component_btns/5.png', class: 'component-btn-img', style: '' %>
                <%= image_pack_tag 'media/images/businesses/space/component_btns/1-active.png', class: 'component-btn-img-active', style: '' %>
              </div>
              <div class="component-btn col position-relative mx-1" data-type="plane" data-id="2">
                <%= image_pack_tag 'media/images/businesses/space/component_btns/2.png', class: 'component-btn-img', style: '' %>
                <%= image_pack_tag 'media/images/businesses/space/component_btns/2-active.png', class: 'component-btn-img-active', style: '' %>
              </div>
            </div>

          </div>
        </div>

        <div class="aerospace-components business-components position-relative">
          <%= image_pack_tag 'media/images/businesses/space/details/aerospace1.png', class: 'component-info', style: '' %>
          <%= image_pack_tag 'media/images/businesses/space/details/aerospace2.png', class: 'component-info', style: '' %>

          <div class="component-btns position-absolute">
            <div class="row g-0">
              <div class="component-btn col position-relative" data-type="aerospace" data-id="1">
                <%= image_pack_tag 'media/images/businesses/space/component_btns/5.png', class: 'component-btn-img', style: '' %>
                <%= image_pack_tag 'media/images/businesses/space/component_btns/1-active.png', class: 'component-btn-img-active d-none', style: '' %>
              </div>
              <div class="component-btn col position-relative" data-type="aerospace" data-id="2">
                <%= image_pack_tag 'media/images/businesses/space/component_btns/2.png', class: 'component-btn-img', style: '' %>
                <%= image_pack_tag 'media/images/businesses/space/component_btns/2-active.png', class: 'component-btn-img-active d-none', style: '' %>
              </div>
            </div>

          </div>
        </div>

      </div>

      <%# render 'navs', return_path: parties_path %>
      <%# render 'navs' %>

    </div>
    <!-- right -->
    <!-- Slider main container -->
    <div class="swiper-container businesses-details-swiper space-details-swiper animate__animated animate__fadeInRight" style="width:53%; background-color: rgba(0,0,0,0.6); ">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper">
        <!-- Slides -->
        <!-- product_list -->
        <div class="swiper-slide plane-slide">
          <div class="w-100" style="height: 400px;"></div>
          <!-- product container -->
          <div class="position-relative mx-auto" style="width: 1060px; height: 415px; background: no-repeat left top url(<%= asset_pack_path 'media/images/businesses/space/plane60.png'%>) " >
            <!-- point 1 -->
            <% points = [
              { container_style: "left:280px; top:10px;", arrow_container_style: "top: 140px; left: 50px;" },
              { container_style: "left:560px; top:15px;", arrow_container_style: "top: 155px; left: -50px;" }
            ] %>
            <% points.each_with_index do |point, i| %>
              <% humanId = i += 1 %>
              <div class="component-point-container position-absolute" data-type='plane' data-id=<%= humanId %> style='<%= point[:container_style] %>' >
                <div class="position-relative">
                  <%= image_pack_tag "media/images/businesses/space/titles/plane-title#{humanId}.png", class: 'title-img ', style: 'left: 0; top:0;' %>
                  <%= image_pack_tag "media/images/businesses/space/titles/plane-title-active#{humanId}.png", class: 'title-img-active ', 'data-id': humanId, style: 'left: 0; top:0;' %>

                  <div class="arrow-container animate__animated animate__fadeIn" style='<%= point[:arrow_container_style] %>' >
                    <div class="position-relative">
                      <div class="arrow-2">
                      </div>
                      <div class="arrow-1 animate__animated animate__infinite zoomIn"></div>
                    </div>
                  </div>

                </div>
              </div>
            <% end %>
          </div>

        </div>
        <div class="swiper-slide">
          Slide 2
        </div>

      </div>
      <!-- If we need pagination -->
      <div class="swiper-pagination"></div>
      <!-- position absolute, bottom center, a little bit right. -->
      <div class="title-pagination position-absolute" style="z-index: 1020; left: 50px; bottom: 50px;">
        <!-- title 0, data-id="0", on click main swiper move to data-id -->
        <div class="row g-0">
          <div class="col business-swiper-tag position-relative" data-id="1" >
            <%= image_pack_tag 'media/images/businesses/space/plane-tag.png' %>
            <%= image_pack_tag 'media/images/businesses/space/plane-tag-active.png', class: 'active-img position-absolute d-none', style: "top:0; left:0;" %>
          </div>
          <div class="col business-swiper-tag ms-5 position-relative" data-id="2" >
            <%= image_pack_tag 'media/images/businesses/space/aerospace-tag.png' %>
            <%= image_pack_tag 'media/images/businesses/space/aerospace-tag-active.png', class: 'active-img position-absolute d-none', style: "top:0; left:0;" %>
          </div>
        </div>

      </div>


    </div>

  </div>






</div>
