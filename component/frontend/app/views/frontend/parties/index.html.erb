<div class="main position-relative">
  <div class="row g-0 position-relative">

    <!-- left -->
    <div class="position-absolute text-center" style="width: 40%; left:50px; top: 50px; z-index:2;">
      <%# render 'party_links' %>
      <%= image_pack_tag 'media/images/party/nav-top.png' %>
      <div class="w-100 mt-5"></div>

      <% video_nav = @party_navs[6] %>
      <%= link_to(video_nav[:path], html_options = {}) do %>
        <%= image_pack_tag 'media/images/party/play-video-btn.png', class: "", style: ""%>
      <% end %>

      <div class="w-100 mt-5"></div>

      <div class="row g-0">
        <% (1..6).each do |i| %>
          <div class="col-4 text-center">
            <%= link_to(@party_navs[i-1][:path], html_options = {}) do %>
              <%= image_pack_tag "media/images/party/index-nav#{i}.png" %>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>

    <!-- Slider main container -->
    <div class="swiper-container partyIndexSwiper window-holder">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper">
        <!-- swiper-slide1 -->
        <div class="swiper-slide" style="background-image:url(<%= asset_pack_path 'media/images/party/swiper1.png'%>)" >

        </div>

        <!-- swiper-slide2 -->
        <div class="swiper-slide" style="background-image:url(<%= asset_pack_path 'media/images/party/swiper2.png'%>)" >

        </div>

        <!-- swiper-slide3 -->
        <div class="swiper-slide" style="background-image:url(<%= asset_pack_path 'media/images/party/swiper3.png'%>)">

        </div>

        <!-- swiper-slide4 -->
        <div class="swiper-slide" style="background-image:url(<%= asset_pack_path 'media/images/party/swiper4.png'%>)">

        </div>

      </div>


    </div>

    <!-- If we need pagination -->
    <div class="swiper-pagination" style="z-index: 1060; bottom: 200px;"></div>
  </div>


</div>
